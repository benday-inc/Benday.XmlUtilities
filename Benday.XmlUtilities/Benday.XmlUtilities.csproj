<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
        <Title>Benday.XmlUtilities</Title>
        <Authors>benday</Authors>
        <Copyright>2024</Copyright>
        <PackageProjectUrl>https://github.com/benday-inc/Benday.XmlUtilities</PackageProjectUrl>
        <PackageIcon>bdc_mark_128_128.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/benday-inc/Benday.XmlUtilities.git</RepositoryUrl>
        <AssemblyVersion>5.5.0.0</AssemblyVersion>
        <Version>$(VersionPrefix)5.5.0</Version>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <Description>A collection of classes and extension methods for working with XML in .NET Core.</Description>
        <Nullable>enable</Nullable>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReleaseNotes>
          v5.5 - Fixed bug in XmlFormatted related to xmlns reserved namespace prefix
          v5.4 - Fixed bug in XmlFormatter so that it preserves the original XML declaration; Fixed bug in XmlFormatter to better handler empty default namespaces
          v5.3 - Added XmlFormatter that handles formatting even when namespaces are not properly defined
          v5.2 - Added DescendantByLocalName() extension method
        </PackageReleaseNotes>    
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\bdc_mark_128_128.png">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="..\LICENSE">
          <Pack>True</Pack>
          <PackagePath>\</PackagePath>
        </None>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>

</Project>
